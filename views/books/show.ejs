<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="<%=result.portait_URL%>" alt="">
    </div>
    <div class="col-md-6">
      <h3><%= result.title %></h3>
      <h4><%= result.genre %></h4>
      <p><%= result.description %></p>
      <br>
      <p><strong>Authors:</strong></p>
      <ol>
        <li><a href="#">Author 555</a></li>
      </ol>
      <br>
      <div class="btn-group-lg" role="group">
        <a class= "btn btn-success" role="button" href="/books/<%=result.id%>/edit">Edit</a>
        <form action="/books/<%= result.id%>?_method=DELETE" method="POST">
          <button
            data-book-id="<%=result.id%>/"
            class="btn btn-danger remove-book"
            type="submit"
            name="delete">Remove</button>
      </form>
      </div>
    </div>
  </div>
</div>
